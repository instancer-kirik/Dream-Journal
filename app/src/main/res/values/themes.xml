        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@drawable/bottomsheet_background</item>
    </style>

    <style name="BottomSheetBody" parent="TextAppearance.MaterialComponents.Body1">
